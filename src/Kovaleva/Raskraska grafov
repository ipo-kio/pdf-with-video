			\draw (1.6,1.4) -- (2.4, 1.5);
			\draw (0.9,1.9) -- (0.9, 2.5);
			\draw (0.5,0.6) -- (0,0);
			\draw (1.35,0.6) -- (1.9,0);
			
			\draw [fill=black] (0,0) circle (1 mm);
			\draw [fill=black] (-0.5,1.5) circle (1 mm);
			\draw [fill=black] (0.9, 2.5) circle (1 mm);
